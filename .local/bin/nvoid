#!/bin/sh

export NVOID_RUNTIME_DIR="${NVOID_RUNTIME_DIR:-"/home/tilman/.local/share/nvoid"}"
export NVOID_BASE16_DIR="${NVOID_BASE16_DIR:-"/home/tilman/.local/share/nvoid/site/pack/packer/start/base16/lua/base16/highlight"}"
